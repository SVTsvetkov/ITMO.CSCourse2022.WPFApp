<Window x:Class="Lab1Ex4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1Ex4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Button x:Name="button" Content="Set Name" HorizontalAlignment="Left" Margin="93,67,0,0" VerticalAlignment="Top" Height="55" Width="178" Click="botton_Click"/>
        <Button x:Name="button1" Content="Ret Name" HorizontalAlignment="Left" Margin="93,146,0,0" VerticalAlignment="Top" Height="55" Width="178" Click="botton1_Click"/>
        <Label x:Name="label" HorizontalAlignment="Left" Margin="370,146,0,0" VerticalAlignment="Top" Width="266" Height="55"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="370,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="266" Height="55" TextChanged="textBox_TextChanged"/>
        <Button Canvas.Left="10" Canvas.Top="10" Content="Click Me" Height="23" Name="button3" Width="75" Click="button3_Click" />
        <TextBox Width="170" Canvas.Left="90" Canvas.Top="12" Name="myTextBox" />
        
    </Canvas>
</Window>
